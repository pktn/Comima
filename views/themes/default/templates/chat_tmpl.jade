script#chat_box(type='text/html')
  .chat-box(data-user='{{ nickname }}', data-type='{{ type }}')
    .avatar
      img(src='{{ image_url }}')
    span.posted-by
      {{ nickname }}
    {{> chat_box_text }}

script#chat_box_text(type='text/html')
  p
    span.date {{ time }}
    | {{ msg }}

script#chat_notice(type='text/html')
  .notice(data-user="{{ user }}")
    span.date {{ time.hours }}:{{ time.minutes }}
    |  {{ noticeMsg }}

script#people_box(type='text/html')
  .user-img
    a(class='{{ status }}', href='{{ nickname }}', data-nickname='{{ nickname }}')
      img(src='{{ image_url }}')

script#title_template(type='text/html')
  | {{#count}} ({{ count }}) {{/count}} {{ roomName }} - Cominy Matching
