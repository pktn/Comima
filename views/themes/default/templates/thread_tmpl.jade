script#thread_box(type='text/html')
  .thread-box(data-user='{{ nickname }}', data-type='{{ type }}')
    .avatar
      img(src='{{ image_url }}')
    .detail
      .posted-by
        | {{ nickname }}
      .date-box
        | {{ time.hours }}:{{ time.minutes }}
      .text-box
        p
          | {{ detail }}

script#thread_notice(type='text/html')
  .notice(data-user="{{ user }}")
    span.date {{ time.hours }}:{{ time.minutes }}
      |  {{ noticeMsg }}

