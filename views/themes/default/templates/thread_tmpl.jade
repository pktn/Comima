script#thread_box(type='text/html')
  .thread-box(data-user='{{ nickname }}', data-type='{{ type }}')
    .avatar
      img(src='{{ image_url }}')
    h5
      | {{ nickname }}
    {{> thread_box_text }}

script#thread_box_text(type='text/html')
  p
    span.date {{ time.hours }}:{{ time.minutes }} {{ time.meridiem }}
    | {{ detail }}

script#thread_notice(type='text/html')
  .notice(data-user="{{ user }}")
    span.date {{ time.hours }}:{{ time.minutes }} {{ time.meridiem }}
    |  {{ noticeMsg }}

